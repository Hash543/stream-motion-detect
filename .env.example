# 資料庫設定 - PostgreSQL Only

# PostgreSQL 設定（必需）
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=motion-detector
POSTGRES_USER=face-motion
POSTGRES_PASSWORD=kkk12345

# JWT 認證設定
SESSION_SECRET=your-secret-key-change-this-in-production

# API設定
API_HOST=0.0.0.0
API_PORT=8282

# 日誌設定
LOG_LEVEL=INFO

# 時區設定
TZ=Asia/Taipei

# RTSP設定
RTSP_TIMEOUT=10
