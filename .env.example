# 資料庫設定
# 優先順序: PostgreSQL > MySQL > SQLite

# PostgreSQL 設定 (推薦，最高優先級)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=motion-detector
POSTGRES_USER=face-motion
POSTGRES_PASSWORD=kkk12345

# MySQL 設定 (備用)
# MYSQL_HOST=localhost
# MYSQL_DATABASE=facemotion
# MYSQL_USER=facemotion
# MYSQL_USERNAME=facemotion
# MYSQL_PASSWORD=facemotion123

# SQLite 設定 (預設，最低優先級)
# DATABASE_URL=sqlite:///./data/monitoring.db

# JWT 認證設定
SESSION_SECRET=your-secret-key-change-this-in-production

# API設定
API_HOST=0.0.0.0
API_PORT=8282

# 日誌設定
LOG_LEVEL=INFO

# 時區設定
TZ=Asia/Taipei

# RTSP設定
RTSP_TIMEOUT=10
RTSP_RECONNECT_ATTEMPTS=5

# AI模型設定
USE_GPU=false
GPU_DEVICE=0

# 通知API設定
NOTIFICATION_ENDPOINT=https://your-server.com/api/violations
NOTIFICATION_TIMEOUT=10
NOTIFICATION_RETRY_ATTEMPTS=3

# 截圖設定
SCREENSHOT_PATH=./screenshots/
SCREENSHOT_QUALITY=95
MAX_STORAGE_DAYS=30

# 檢測設定
HELMET_CONFIDENCE_THRESHOLD=0.7
DROWSINESS_DURATION_THRESHOLD=3.0
FACE_RECOGNITION_THRESHOLD=0.6
PROCESSING_FPS=2

# 規則引擎設定
RULE_RELOAD_INTERVAL=300
